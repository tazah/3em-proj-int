<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.client_leger">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Clientleger"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.AlbumDrawingsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AlbumActivity"
            android:exported="false"
            android:label="@string/title_activity_album"
            android:theme="@style/Theme.Clientleger" />
        <activity
            android:name=".activity.ChooseAvatar"
            android:exported="false"
            android:label="@string/title_activity_choose_avatar"
            android:theme="@style/Theme.Clientleger.NoActionBar" />
        <activity android:name=".activity.SignUpActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>
