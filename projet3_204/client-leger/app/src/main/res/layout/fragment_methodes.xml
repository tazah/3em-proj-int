<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragments.MethodsFragment">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="304dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleChooseWay"
        app:srcCompat="@drawable/avatar5"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@drawable/avatar5" />

    <TextView
        android:id="@+id/titleChooseWay"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:gravity="center"
        android:text="Choissisez une façon de créer votre avatar :"
        android:textColor="@color/theme1_blue"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />

    <Button
        android:id="@+id/takePictureF"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginTop="222dp"
        android:text="Personnaliser mon Avatar"
        android:textColor="@color/white"
        android:background="@drawable/btn_background_bleu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleChooseWay"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/chooseFromImage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="236dp"
        android:background="@drawable/btn_background_purple"
        android:text="Choisir les avatars de Polypaint"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleChooseWay" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="30dp"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleChooseWay"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
